<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Myntra Style Slider</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/custome.css">
</head>
<body>

<div id="myntraSlider" class="carousel slide" data-bs-ride="carousel">
  <!-- Indicators/dots -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#myntraSlider" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#myntraSlider" data-bs-slide-to="1"></button>
    <button type="button" data-bs-target="#myntraSlider" data-bs-slide-to="2"></button>
  </div>

  <!-- Slides -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/images/slide1.jpg" alt="Banner 1">
    </div>
    <div class="carousel-item">
      <img src="/images/slide2.jpg" alt="Banner 2">
    </div>
    <div class="carousel-item">
      <img src="/images/slide3.png" alt="Banner 3">
    </div>
  </div>

  <!-- Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#myntraSlider" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#myntraSlider" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>
<div style="display: flex;">

 <% let i = 0 %> 
<% data.forEach((key)=>{ %>
<% if (i< data.length ){ %>
<div class="card" style="width: 30%;">
  <h1><%= key.name %></h1>
  <img src="<%= key.images[0] %>" alt="" width="30%">
  <p><%= key.description %></p>
</div>
<%}%>
<div>
  <form action="/" method="get">
    <button name="price" value="123">200</button>
    <button name="name" value="Shoes">Shoes</button>
  </form>
</div>
<% i++ }) %>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
