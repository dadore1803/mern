<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Data List</title>

  <!-- Google Material Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background: #f4f4f4;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .filter-bar {
      max-width: 600px;
      margin: 0 auto 20px;
      display: flex;
      gap: 10px;
      justify-content: center;
    }

    .filter-bar input[type="text"] {
      flex-grow: 1;
      padding: 10px 15px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 16px;
    }

    .filter-bar button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .filter-bar button:hover {
      background-color: #0056b3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      table-layout: fixed;
    }

    th, td {
      padding: 15px 20px;
      text-align: center;
      border-bottom: 1px solid #ddd;
      word-wrap: break-word;
    }

    th {
      background-color: #f0f0f0;
      font-weight: bold;
    }

    tr:hover {
      background-color: #f9f9f9;
    }

    .action-btn {
      background: #28a745;
      border: none;
      cursor: pointer;
      padding: 8px 12px;
      font-size: 14px;
      color: white;
      border-radius: 6px;
      transition: background-color 0.2s ease;
    }

    .action-btn:hover {
      background-color: #218838;
    }

    .actions {
      display: flex;
      justify-content: center;
    }

    img {
      max-width: 100px;
      border-radius: 8px;
    }


  </style>
</head>
<body>
 
  <h2>üõçÔ∏è Product List</h2>

  <!-- Filter Bar -->
  

  <!-- Product Table -->
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.length === 0) { %>
        <tr>
          <td colspan="4">No products found</td>
        </tr>
      <% } %>
      <% data.forEach((key) => { %>
        <tr>
          <td><%= key.name %></td>
          <td><a href="/view/<%= key._id %>"><img src="<%= key.images[0] %>" alt="<%= key.name %>"></a></td>
          <td>‚Çπ<%= key.price %></td>
          <td>
            <div class="actions">
              <form action="/cart/<%= key._id %>" method="get">
                <button class="action-btn" title="Add to Cart">Add To Cart</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  
  
</body>
</html>
