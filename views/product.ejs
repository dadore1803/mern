<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Product List</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f9f9f9, #e0e0e0);
      margin: 0;
      padding: 40px 20px;
      color: #333;
    }

    h2 {
      text-align: center;
      margin-bottom: 40px;
      font-size: 32px;
      color: #333;
    }

    table {
      width: 100%;
      max-width: 1000px;
      margin: auto;
      border-collapse: collapse;
      background: #fff;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    th, td {
      padding: 20px;
      text-align: center;
      border-bottom: 1px solid #eee;
    }

    th {
      background: #fafafa;
      font-size: 18px;
    }

    tr:hover {
      background: #f7f7f7;
      transition: 0.3s;
    }

    .actions {
      display: flex;
      justify-content: center;
    }

    .action-btn {
      background: #ff6b6b;
      border: none;
      padding: 10px 20px;
      color: #fff;
      border-radius: 30px;
      font-weight: bold;
      cursor: pointer;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transition: 0.3s;
    }

    .action-btn:hover {
      background: #e64949;
      transform: translateY(-2px);
    }

    img {
      max-width: 80px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .pagination {
      margin-top: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }

    .pagination a, .pagination span {
      padding: 10px 18px;
      border-radius: 50px;
      background: #fff;
      border: 1px solid #ddd;
      color: #333;
      text-decoration: none;
      font-weight: bold;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
      transition: 0.3s;
    }

    .pagination a:hover {
      background: #007bff;
      color: #fff;
      border-color: #007bff;
    }

    .pagination span {
      background: #007bff;
      color: #fff;
      border-color: #007bff;
    }

    @media (max-width: 768px) {
      table, th, td {
        font-size: 14px;
        padding: 15px;
      }

      img {
        max-width: 60px;
      }
    }
  </style>
</head>

<body>
  <h2>üõçÔ∏è Product List</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.length === 0) { %>
        <tr><td colspan="4">No products found</td></tr>
      <% } %>
      <% data.forEach((key) => { %>
        <tr>
          <td><%= key.name %></td>
          <td><a href="/view/<%= key._id %>"><img src="<%= key.images[0] %>" alt="<%= key.name %>"></a></td>
          <td>‚Çπ<%= key.price %></td>
          <td>
            <div class="actions">
              <form action="/cart/<%= key._id %>" method="get">
                <button class="action-btn" title="Add to Cart">Add To Cart</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="pagination">
    <% if (totalpages > 1) { %>
      <% if (currentpage > 1) { %>
        <a href="/products?page=<%= currentpage - 1 %>">Prev</a>
      <% } else { %>
        <span>Prev</span>
      <% } %>

      <% for (let i = 1; i <= totalpages; i++) { %>
        <% if (i == currentpage) { %>
          <span><%= i %></span>
        <% } else { %>
          <a href="/products?page=<%= i %>"><%= i %></a>
        <% } %>
      <% } %>

      <% if (currentpage < totalpages) { %>
        <a href="/products?page=<%= currentpage + 1 %>">Next</a>
      <% } else { %>
        <span>Next</span>
      <% } %>
    <% } %>
  </div>
</body>
</html>
